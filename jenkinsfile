pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building environment..'

   script {
    sh '''#!/bin/bash -l # Use login shell for proper environment setup
        export FNM_DIR="$HOME/.local/share/fnm"
        curl -fsSL https://fnm.vercel.app/install | bash
        export PATH="$FNM_DIR:$PATH"
        eval "$(fnm env --use-on-cd --version-file-strategy=recursive)"

        fnm install 22

        node -v
        npm -v

        npm install
    '''
}
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}