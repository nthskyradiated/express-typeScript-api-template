pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Preparing... Building..'
                sh 'ls -al'
                sh 'cd src'
                sh 'npm install'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}