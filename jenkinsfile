pipeline {
    agent any
    environment {

        PATH = "/usr/local/bin:$PATH"
    }
    stages {


        stage('Build') {
                            steps {
                nodejs(nodeJSInstallationName: 'NodeJS') {
                    sh 'npm install -g pnpm'
                    sh 'npm cache clean --force'
                    sh 'pnpm install --store=node_modules/.pnpm-store'
                }
            }
        }
        stage('Test') {
            steps {
dir('src') {
                    sh 'pnpm run test'
                }
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}