pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Preparing... Building..'
                ls -al
                cd src
                npm install
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}