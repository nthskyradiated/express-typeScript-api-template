pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building environment..'
 script {
                    // Install fnm and update PATH
                    sh '''
                    curl -fsSL https://fnm.vercel.app/install | bash
                    export PATH="$HOME/.fnm:$PATH"
                    source ~/.bashrc  # Source the profile to apply changes
                    eval "$(fnm env --use-on-cd --version-file-strategy=recursive)"
                    '''

                    // Install Node.js version 18 and set it for the session
                    sh '''
                    export PATH="$HOME/.fnm:$PATH"
                    fnm install 18
                    fnm use 18
                    '''

                    // Verify Node.js and npm installation
                    sh '''
                    export PATH="$HOME/.fnm:$PATH"
                    node -v
                    npm -v
                    '''

                    // Install dependencies
                    sh '''
                    export PATH="$HOME/.fnm:$PATH"
                    npm install
                    '''
                }
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}