pipeline {
    agent any

    stages {
        stage('Build') {
                            steps {
                nodejs(nodeJSInstallationName: 'NodeJS') {
                    sh 'npm install -g pnpm'
                    sh 'npm cache clean --force'
                    sh 'pnpm install'
                }
            }
        }
        stage('Test') {
            steps {
                sh'''
                    npm install -g pnpm
                    cd ./src
                    sh 'pnpm run test'
                '''
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}