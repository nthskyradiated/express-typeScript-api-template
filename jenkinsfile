pipeline {
    agent any

    stages {
        stage('Build') {
                            steps {
                nodejs(nodeJSInstallationName: 'NodeJS') {
                    sh 'find / -name ".npmrc"'
                    sh 'npm config fix'
                    sh 'npm cache clean --force'
                    sh 'npm install'
                }
            }
        }
        stage('Test') {
            steps {
                sh 'npm run test'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}